{
	"name": "markdown-heading",
	"displayName": "markdown-heading",
	"description": "generate anchor links for headings in markdown files",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.46.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:markdown-heading.helloWorld"
	],
	"main": "./extension.js",
	"contributes": {
		"commands": [
			{
				"command": "markdown-heading.helloWorld",
				"title": "Hello World"
			}
		],
		"configuration": {
            "type": "object",
            "title": "Markdown-heading configuration",
            "properties": {
                "markdownHeading.base": {
                    "type": "string",
                    "default": "#",
                    "description": "Customize the indicator of your heading line"
                }
            }
        }

	},
	"scripts": {
		"lint": "eslint .",
		"pretest": "npm run lint",
		"test": "node ./test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.46.0",
		"@types/glob": "^7.1.1",
		"@types/mocha": "^7.0.2",
		"@types/node": "^13.11.0",
		"eslint": "^6.8.0",
		"glob": "^7.1.6",
		"mocha": "^7.1.2",
		"typescript": "^3.8.3",
		"vscode-test": "^1.3.0"
	}
}
